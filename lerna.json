{
  "version": "4.8.0",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ],
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "ignore": "component-*"
    }
  },
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ]
}
