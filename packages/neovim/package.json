    "@babel/preset-typescript": "^7.22.5",
    "@types/jest": "^27.0.1",
    "@types/node": "16.9.x",
    "@types/which": "^3.0.0",
    "babel-jest": "^29.6.1",
    "jest": "^27.2.0",
